{
  "expo": {
    "name": "Fitness Hero",
    "slug": "fitness",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/splash.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.fitness",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow the app to use speech recognition to analyze your food descriptions.",
        "NSMicrophoneUsageDescription": "Allow the app to access your microphone for logging meals by voice."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourname.fitness",
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sqlite",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow the app to access your microphone for logging meals by voice.",
          "speechRecognitionPermission": "Allow the app to use speech recognition to analyze your food descriptions."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "4e62c4ef-6308-422b-b7fe-da214e6eef19"
      }
    }
  }
}
